<h2>ユーザーさんからのコメント(<%= @post.comments.count %>)</h2>
<div class="detail-comment">
  <div class="detail-comment__box">
    <% if @comments.present? %>
      <% @comments.each do |comment| %>
        <div class="comment-user">
          <%= link_to comment.user do %>
            <% if comment.user.image.url.present? %>
              <%= image_tag comment.user.image.url, class:'comment-user__comment-picture' %>
            <% else %>
              <img src="https://mgs01y1.wowma.net/pc/img/common/no_image300.gif?query=201908071342" alt="" class="comment-user__comment-picture">
            <% end %>
          <% end %>
          <div class="comment-user__name">
            <%= comment.user.nickname %>さん
          </div>
        </div>
        <div class="comment-text-area">
          <%= simple_format(comment.text) %>
        </div>
      <% end %>
    <% else %>
      <h2>まだコメントはありません</h2>
    <% end %>
  </div>
  <%= link_to 'コメント一覧', post_comment_path(@post), class:'comment-link-path' %>
</div>
<% if current_user %>
  <h2>コメントを書く</h2>
  <div class="detail-description">
    <div class="detail-description__display">
      <%= form_for [@post, @comment] do |f| %>
        <%= f.text_area :text, class:"comment-form", id:"textarea" %>
        <%= f.submit 'コメントする', class:"comment-btn" %>
      <% end %>
    </div>
  </div>
<% end %>