<body>
  <%= render "posts/header" %>
  <div class="new-post-box">
    <div class="new-post-container">
      <div class="new-name">
        ログイン
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-registration-box">
          <%= f.label :email, class:'new-name-form' %>
        </div>
        <div class="text-form-box">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'new-part-form' %>
        </div>
        <div class="form-registration-box">
          <%= f.label :パスワード, class:'new-name-form' %>
        </div>
        <div class="text-form-box">
          <%= f.password_field :password, autocomplete: "current-password", class:'new-part-form' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-registration-box">
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードを記憶する %>
          </div>
        <% end %>
          <%= f.submit "ログイン", class:'new-form-btn' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <%= render "posts/footer" %>
</body>
